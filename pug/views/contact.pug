  link(rel="stylesheet" href="../bower_components/bootstrap/dist/css/bootstrap-theme.min.css")
  link(rel="stylesheet" href="../stylesheets/styles.css")

mixin contactContent(titleContent)
  .content
    .title= titleContent
    .block
