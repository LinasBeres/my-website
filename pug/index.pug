extends partial/page


//--------------------------------------------------------\\
//- ---------------- Mixins of goodness ---------------- -\\
//--------------------------------------------------------\\

mixin projects
  .projects.links
    div.title Projects
    div.horizontal_line
    div.list
      a(href="https://github.com/LinasBeres/rez-packages") Rez Package Collector
      a(href="https://github.com/LinasBeres/spindulys") Spindulys

mixin socials
  .socials.links
    div.title Socials
    div.horizontal_line
    div.list
      a(href="https://github.com/LinasBeres") Github
      a(href="https://uk.linkedin.com/in/linas-beresna") LinkedIn
      a(href="./views/contact.html") Contact

mixin resume
  .resume.links
    div.title Resume
    div.horizontal_line
    div.list
      a(href="./views/resume.html") <s>Pretty</s>
      a(href="./files/linas-beresna-cv.pdf") Simple

mixin interests
  .interests.links
    div.title Interests
    div.horizontal_line
    div.list
      a(href="./views/graphics.html") <s>Graphics!</s>
      a(href="./views/snowboarding.html") <s>üèÇ Snowboarding üèÇ</s>
      a(href="./views/travelling.html") <s>Travelling</s>
      a(href="./views/running.html") <s>Running</s>

//-----------------------------------------------------------\\
//- ----------------- Main Page Extensions ---------------- -\\
//-----------------------------------------------------------\\
append meta
  title Home | Linas Beresna

append styles
  link(rel="stylesheet" href="./bower_components/bootstrap/dist/css/bootstrap.min.css")
  link(rel="stylesheet" href="./bower_components/bootstrap/dist/css/bootstrap-theme.min.css")
  link(rel="stylesheet" href="./stylesheets/styles.css")

block body
  div.pageContent
    div.holder
      a(href="./index.html")
        img.me(src='./images/me.jpg')
      +content("Linas Beresna")
        - var gruvi = '<a href="https://gruvi.cs.sfu.ca/">GrUVi</a>'
        - var eugene = '<a href="https://www.dgp.toronto.edu/~elf/">Eugene Fiume</a>'
        - var tobias = '<a href="https://www.homepages.ucl.ac.uk/~ucactri/">Tobias Ritschel</a>'
        p Hello hello! I'm a PhD student at !{gruvi} labs at SFU and am supervised by !{eugene}. My research is in the intersection of realtime and photorealistic rendering. I did my masters at UCL under !{tobias} and have worked for a couple of years in the VFX and animation industry.
      div.inline
        +projects
        +socials
        +resume
        +interests

append scripts
  script(src="scripts/form.js")
  script(src="scripts/time.js")
  script(src="scripts/index.js")
